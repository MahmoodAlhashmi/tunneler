/*********
  Modified from the examples of the Arduino LoRa library
  More resources: https://randomnerdtutorials.com
*********/

#include <SPI.h>
#include <LoRa.h>
// Include the necessary libraries
#include <Arduino.h>

// Define pins for motor control
#define MOTOR1_D0_PIN 27
#define MOTOR1_D1_PIN 26
#define MOTOR2_D2_PIN 25
#define MOTOR2_D3_PIN 33

//define the pins used by the transceiver module
#define ss 5
#define rst 14
#define dio0 2
void setupMotors() {
  // Set motor control pins as outputs
  pinMode(MOTOR1_D0_PIN, OUTPUT);
  pinMode(MOTOR1_D1_PIN, OUTPUT);
  pinMode(MOTOR2_D2_PIN, OUTPUT);
  pinMode(MOTOR2_D3_PIN, OUTPUT);
}

void setup() {
  //initialize Serial Monitor
  Serial.begin(115200);
  setupMotors();
  while (!Serial);
  Serial.println("LoRa Receiver");

  //setup LoRa transceiver module
  LoRa.setPins(ss, rst, dio0);
  
  //replace the LoRa.begin(---E-) argument with your location's frequency 
  //433E6 for Asia
  //866E6 for Europe
  //915E6 for North America
  while (!LoRa.begin(866E6)) {
    Serial.println(".");
    delay(500);
  }
   // Change sync word (0xF3) to match the receiver
  // The sync word assures you don't get LoRa messages from other LoRa transceivers
  // ranges from 0-0xFF
  LoRa.setSyncWord(0xF3);
  Serial.println("LoRa Initializing OK!");
}

void loop() {
  // try to parse packet
  int packetSize = LoRa.parsePacket();
  if (packetSize) {
    // received a packet
    Serial.print("Received packet '");

    // read packet
    while (LoRa.available()) {
      String LoRaData = LoRa.readString();
      Serial.print(LoRaData); 
        // Turn on motor 1
      analogWrite(MOTOR1_D0_PIN, 50);
      digitalWrite(MOTOR1_D1_PIN, LOW);
      // Turn on motor 2
      digitalWrite(MOTOR2_D3_PIN, LOW);
      analogWrite(MOTOR2_D2_PIN, 50);
      
      // Add a delay to see the motors run
      delay(2000);
    }

    // print RSSI of packet
    Serial.print("' with RSSI ");
    Serial.println(LoRa.packetRssi());
  }
}
